{
  "name": "task-manager-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "A desktop task manager app with Electron, React, and MongoDB",
  "main": "electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "build": "npm run build:frontend && npm run build:electron",
    
    "start": "electron .",
    
    "dist:win": "npm run build:frontend && electron-builder --win",
    "dist:mac": "npm run build:frontend && electron-builder --mac",
    "dist:linux": "npm run build:frontend && electron-builder --linux"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.9.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yourname.taskmanager",
    "productName": "Task Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}